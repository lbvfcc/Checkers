// Конфиг файл для быстрой настройки параметров игры
{
    // Отвечает за ширину и высоту окна игры
    "WindowSize": {
        "Width": 0,
        "Hight": 0
    },
    "Bot": {
        // Является ли ботом белые шашки - нет
        "IsWhiteBot": false,
        // Является ли ботом черные шашки - да
        "IsBlackBot": true,
        // Уровень игры белых
        "WhiteBotLevel": 0,
        // Уровень игры черных
        "BlackBotLevel": 5,
        // Просчет состояния бота
        "BotScoringType": "NumberAndPotential",
        // Задержка для хода бота
        "BotDelayMS": 0,
        // Являются ли рандомными ходы бота - нет
        "NoRandom": false,
        // Принимает значение O0, O1, O2 определяет насколько сильно будут урезаны наши просчеты внутри бота (О0 - полынй расчёт ходов, О2 - самая сильная оптимизация
        "Optimization": "O1"
    },
    "Game": {
        // Максимальное кол-во ходов до наступления ничьей
        "MaxNumTurns": 120
    }
}
